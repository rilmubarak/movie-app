<%- include('partials/header')%>

<div class="container-fluid p-5">
    <% if(alert.msg){ %>
        <div class="alert alert-danger" role="alert">
            <%= alert.msg %>
        </div>
    <% } %>
    <form action="/casts/add" method="POST">
        <div class="form-group">
          <label>First_Name</label>
          <input name="first_name" type="text" class="form-control" placeholder="e.g: John">
        </div>
        <div class="form-group">
            <label>Last Name</label>
            <input name="last_name" type="text" class="form-control" placeholder="e.g: 12 Doe">
        </div>
        <div class="form-group">
            <label>Birth Year</label>
            <input name="birth_year" type="text" class="form-control" placeholder="e.g: 1957">
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input name="phone_number" type="text" class="form-control" placeholder="e.g: 08123456789">
        </div>
        <div class="form-group">
            <label>Gender</label>
            <input type="radio" name="gender" value="Male">Male</label>
            <input type="radio" name="gender" value="Female">Female</label>
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/casts"><button type="button" class="btn btn-danger">Cancel</button></a>
    </form>
</div>

<%- include('partials/footer')%>
